#cloud-config

# Setup hostname
hostname: main-dev-01
# "{{ purpose }}-{{ env }}-{{ number }}" # we use jinja2 Templating to do this, verify if this is supported, should be

# Set the locale and keyboard layout
locale: nl_BE.UTF-8
keyboard:
  layout: be

# Timezone setup
timezone: Europe/Brussels

# Preserve hostname
preserve_hostname: false

# Create our user
users:
  - name: sysadmin
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
    homedir : /home/sysadmin
    shell: /bin/zsh
    ssh_authorized_keys:
      - ssh-rsa 
# disable ssh password auth
#ssh_pwauth: false

# disable password auth
write_files:
  - path: /etc/ssh/sshd_config
    content: |
      PasswordAuthentication yes
      PermitRootLogin yes
      PubkeyAuthentication yes

# restart ssh and set proper rights on keys
runcmd:
  - sudo systemctl restart ssh
  - sudo chown -R sysadmin:sysadmin /home/sysadmin/.ssh
  - sudo chmod 700 /home/sysadmin/.ssh
  - sudo chmod 600 /home/sysadmin/.ssh/authorized_keys



# Update and upgrade packages on first boot
package_update: true
package_upgrade: true

